{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "outDir": "dist",
        "declarationDir": "dist/types",
        "lib": [
            "ESNext",
        ],
        "strict": true,
        "isolatedModules": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        // TODO: Remove allowJs later.
        "allowJs": true,
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "dist",
    ],
    "ts-node": {
        "esm": true,
    },
}
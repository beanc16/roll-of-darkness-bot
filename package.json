{
    "name": "roll-of-darkness-bot",
    "version": "1.4.0",
    "description": "A discord bot for rolling dice in the New World of Darkness / Chronicles of Darkness tabletop system style.",
    "main": "dist/bot.js",
    "types": "dist/types/index.d.ts",
    "author": "ShockingShots & LittlePsuedoBunny",
    "scripts": {
        "build": "rm -rf dist && tsc",
        "lint": "eslint .",
        "start": "npm run build && node dist/bot.js",
        "start:dev": "nodemon src/bot.ts",
        "register-slash-commands": "ts-node src/slash-command-helpers/registerSlashCommands.ts",
        "first-time-setup": "node node_modules/@beanc16/discordjs-generators/src/runFirstTimeSetup.js",
        "update-bot-settings": "node node_modules/@beanc16/discordjs-generators/src/updateBotSettings.js",
        "preversion": "npm run lint",
        "version": "git add -A",
        "postversion": "git push && git push --tags"
    },
    "dependencies": {
        "@beanc16/discordjs-common-commands": "^2.0.3",
        "@beanc16/discordjs-generators": "^1.0.0",
        "@beanc16/discordjs-helpers": "^2.0.4",
        "@beanc16/logger": "^1.3.1",
        "@beanc16/microservices-abstraction": "^2.1.0",
        "app-root-path": "^3.0.0",
        "discord.js": "^14.7.1",
        "dotenv": "^16.0.1",
        "expr-eval": "^2.0.2",
        "mongodb-controller": "^1.4.4"
    },
    "devDependencies": {
        "@types/node": "^20.9.0",
        "eslint": "^8.8.0",
        "mongodb": "^6.3.0",
        "nodemon": "^2.0.18",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": "18.x"
    }
}

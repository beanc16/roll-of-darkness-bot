{
    "name": "roll-of-darkness-bot",
    "version": "1.7.0",
    "description": "A discord bot for rolling dice in the New World of Darkness / Chronicles of Darkness tabletop system style.",
    "main": "dist/bot.js",
    "types": "dist/types/index.d.ts",
    "author": "ShockingShots",
    "type": "module",
    "scripts": {
        "build": "rm -rf dist && swc src -d dist --strip-leading-paths --ignore \"src/**/*.test.ts\" --ignore \"src/**/fakes\"",
        "typecheck": "tsc --noEmit",
        "start": "npm run build && node dist/bot.js",
        "start:dev": "node --loader ts-node/esm --watch src/bot.ts",
        "lint": "eslint --config eslintrc.cjs --cache --ext js --ext ts ./",
        "lint:fix": "eslint --config eslintrc.cjs --cache --fix --ext js --ext ts ./",
        "test": "jest --passWithNoTests --detectOpenHandles",
        "test:watch": "jest --passWithNoTests --detectOpenHandles --watch",
        "test:watch:all": "jest --passWithNoTests --detectOpenHandles --watchAll",
        "register-slash-commands": "node --loader ts-node/esm src/scripts/registerSlashCommands.ts",
        "clean-up-media-resources": "node --loader ts-node/esm src/scripts/cleanUpMediaResources.ts",
        "preversion": "npm run lint",
        "version": "git add -A",
        "postversion": "git push && git push --tags"
    },
    "dependencies": {
        "@beanc16/discordjs-common-commands": "^2.1.2",
        "@beanc16/discordjs-generators": "^1.0.0",
        "@beanc16/discordjs-helpers": "^2.2.3",
        "@beanc16/logger": "^1.5.0",
        "@beanc16/microservices-abstraction": "^2.9.0",
        "@discordjs/voice": "^0.18.0",
        "@langchain/anthropic": "^1.0.0",
        "@langchain/core": "^1.0.1",
        "app-root-path": "^3.0.0",
        "dayjs": "^1.11.19",
        "discord.js": "^14.7.1",
        "expr-eval-fork": "^3.0.1",
        "fuse.js": "^7.1.0",
        "instagram-url-direct": "^2.0.7",
        "libsodium-wrappers": "^0.7.15",
        "mongodb": "^6.3.0",
        "mongodb-controller": "^1.6.6",
        "pokedex-promise-v2": "^4.2.1",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@beanc16/utility-types": "^1.1.0",
        "@swc/cli": "^0.7.9",
        "@swc/core": "^1.15.7",
        "@swc/jest": "^0.2.39",
        "@types/jest": "^30.0.0",
        "@types/node": "^20.9.0",
        "dotenv": "^17.2.3",
        "eslint-config-lintification": "^1.0.1",
        "jest": "^30.2.0",
        "nodemon": "^3.1.11",
        "ts-jest": "^29.4.6",
        "ts-jest-resolver": "^2.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "8.50.0"
    },
    "engines": {
        "node": "22.x"
    }
}
